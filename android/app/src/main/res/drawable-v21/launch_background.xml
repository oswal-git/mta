<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo sólido (opcional, si quieres mantenerlo igual) -->
    <item android:drawable="@color/splash_color" />

    <!-- Gradiente (opcional, puedes quitarlo si prefieres solo color sólido) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/launch_gradient_start"
                android:endColor="@color/launch_gradient_end"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Logo centrado -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/splash" />
    </item>
</layer-list>