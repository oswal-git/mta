<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base para la aplicación -->
    <style name="Theme.App" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <!-- Tema para la pantalla de splash en Android 12+ -->
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <!-- Color de fondo de la pantalla de splash -->
        <item name="windowSplashScreenBackground">@color/splash_color</item>
        
        <!-- El ícono que se mostrará en el centro. 
             Usa @drawable/splash como tenías, o el launcher_foreground si prefieres. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        
        <!-- El tema al que la app transicionará después del splash -->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>
</resources>