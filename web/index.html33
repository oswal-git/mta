<!DOCTYPE html>
<html>
    <head>
        <base href="$FLUTTER_BASE_HREF" />
        <meta charset="UTF-8" />
        <meta content="IE=Edge" http-equiv="X-UA-Compatible" />
        <meta name="description" content="MTA - Blood Pressure Manager" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <meta name="apple-mobile-web-app-title" content="MTA" />
        <link rel="apple-touch-icon" href="icons/Icon-192.png" />
        <link rel="icon" type="image/png" href="favicon.png" />
        <title>MTA</title>
        <link rel="manifest" href="manifest.json" />

        <script src="flutter.js" defer></script>
    </head>
    <body>
        <!-- Display a progress indicator while loading -->
        <div id="loading">
            <style>
                body {
                    margin: 0;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 100vh;
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                }
                #loading {
                    text-align: center;
                    color: white;
                }
                .spinner {
                    border: 4px solid rgba(255, 255, 255, 0.3);
                    border-top: 4px solid white;
                    border-radius: 50%;
                    width: 40px;
                    height: 40px;
                    animation: spin 1s linear infinite;
                    margin: 20px auto;
                }
                @keyframes spin {
                    0% {
                        transform: rotate(0deg);
                    }
                    100% {
                        transform: rotate(360deg);
                    }
                }
            </style>
            <div class="spinner"></div>
            <p>Loading MTA...</p>
        </div>

        <script>
            window.addEventListener('load', function (ev) {
                const serviceWorkerVersion = '1.0.0';

                // Inicializa el cargador de Flutter
                const flutterLoader = _flutter.loader;

                // Carga la aplicación usando el nuevo método FlutterLoader.load
                flutterLoader
                    .load({
                        serviceWorker: {
                            serviceWorkerVersion: serviceWorkerVersion
                        }
                    })
                    .then(function (engineInitializer) {
                        // Inicializa el motor
                        return engineInitializer.initializeEngine();
                    })
                    .then(function (appRunner) {
                        // Ejecuta la aplicación
                        appRunner.runApp();
                    });
            });
        </script>
    </body>
</html>
